general {
        output_format = "i3bar"
        colors = true
        interval = 10
}

order += "wireless wlp3s0"
order += "ethernet eth0"
order += "battery 0"
order += "cpu_temperature 0"
order += "volume master"
order += "memory"
order += "tztime local"
order += "tztime berlin"

wireless wlp3s0 {
	format_up = "📡%quality at %essid, %bitrate"
	format_down = "📡 down"
}

ethernet eth0 {
	format_up = "🖥️ %speed"
	format_down = "🖥️ down"
}

battery 0 {
	format = "%status %percentage %remaining %emptytime"
	format_down = "No battery"
	status_chr = "⚡"
	status_bat = "🔋"
	status_unk = "❓"
	status_full = "☢️"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}

cpu_temperature 0 {
	format = "🌡️ %degrees°C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

volume master {
	format = "🔊%volume"
	format_muted = "🔇"
	device = "pulse:0"
}

memory {
	format = "%used"
	threshold_degraded = "10%"
	format_degraded = "MEMORY: %free"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

tztime berlin {
	format = "%Y-%m-%d %H:%M:%S %Z"
	timezone = "Europe/Berlin"
	hide_if_equals_localtime = true
}

