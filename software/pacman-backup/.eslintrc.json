{
	"env": {
		"browser": false,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"overrides": [{
		"files": [ "*.mjs" ],
		"rules": {}
	}],
	"rules": {
		"no-restricted-globals": [
			"error",
			{ "name": "__dirname"       },
			{ "name": "__filename"      },
			{ "name": "Buffer"          },
			{ "name": "exports"         },
			{ "name": "module"          },
			{ "name": "TextDecoder"     },
			{ "name": "TextEncoder"     },
			{ "name": "URL"             },
			{ "name": "URLSearchParams" }
		],
		"arrow-parens": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
