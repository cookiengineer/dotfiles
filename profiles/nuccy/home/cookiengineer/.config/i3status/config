general {
	output_format = "i3bar"
	colors = true
	color_good = "#22CCFF"
	color_degraded = "#FFCC22"
	color_bad = "#FF2222"
	interval = 10
}

order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_temperature 1"
order += "cpu_temperature 2"
order += "cpu_temperature 3"
order += "volume microphone"
order += "volume speakers"
order += "volume bluetooth"
order += "memory"
order += "tztime berlin"
order += "tztime local"

wireless _first_ {
	format_up = "📡 %ip"
	format_down = ""
}

ethernet _first_ {
	format_up = "🖥️ %ip"
	format_down = ""
}

cpu_temperature 1 {
	format = "🌡️%degrees°C"
	format_above_threshold = "🔥%degrees°C"
	max_threshold = 84
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
	separator = false
	separator_block_width = 1
}

cpu_temperature 2 {
	format = "🌡️%degrees°C"
	format_above_threshold = "🔥%degrees°C"
	max_threshold = 84
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_input"
	separator = false
	separator_block_width = 1
}

cpu_temperature 3 {
	format = "🌡️%degrees°C"
	format_above_threshold = "🔥%degrees°C"
	max_threshold = 84
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp3_input"
}

volume bluetooth {
	format = "🎧 %volume"
	format_muted = ""
	device = "pulse:bluez_sink.FC_58_FA_78_33_42.a2dp_sink"
}

volume microphone {
	format = "🎤 %volume"
	format_muted = ""
	device = "pulse:alsa_input.pci-0000_00_1b.0.analog-stereo"
}

volume speakers {
	format = "🔊 %volume"
	format_muted = ""
	device = "pulse:alsa_output.pci-0000_00_1b.0.analog-stereo"
}

memory {
	format = "🗄️ %percentage_used"
	format_degraded = "🗄️ %percentage_used"
	threshold_degraded = "10%"
}

tztime berlin {
	format = "📅 %Y-%m-%d %H:%M:%S %Z"
	timezone = "Europe/Berlin"
	hide_if_equals_localtime = true
}

tztime local {
	format = "📅 %Y-%m-%d %H:%M:%S"
}

